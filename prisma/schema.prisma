generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model ingredients {
  id            Int      @id @default(autoincrement()) @db.UnsignedInt
  name          String   @db.VarChar(100)
  market_weigth Decimal  @db.Decimal(10, 2)
  market_price  Decimal  @db.Decimal(10, 2)
  gross_weigth  Decimal  @db.Decimal(10, 2)
  real_amount   Decimal? @db.Decimal(10, 2)
  recipe_id     Int      @db.UnsignedInt
  recipes       recipes  @relation(fields: [recipe_id], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "ingredients_recipes_FK")

  @@index([recipe_id], map: "ingredients_recipes_FK")
}

model recipes {
  id               Int           @id @default(autoincrement()) @db.UnsignedInt
  title_recipe     String        @unique(map: "recipes_unique") @db.VarChar(150)
  describe_recipes String?       @db.Text
  user_id          Int           @db.UnsignedInt
  ingredients      ingredients[]
  users            users         @relation(fields: [user_id], references: [id], onDelete: NoAction, map: "recipes_users_FK")

  @@index([user_id], map: "recipes_users_FK")
}

model users {
  id            Int       @id @default(autoincrement()) @db.UnsignedInt
  name          String    @db.VarChar(100)
  email         String    @unique(map: "users_unique") @db.VarChar(150)
  password_hash String    @db.VarChar(100)
  createdAt     DateTime  @default(now()) @db.DateTime(0)
  recipes       recipes[]
}
